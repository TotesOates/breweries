<div class="rr-sidebar">
<ul class="list pl3">
{{#each this.model as |brewery|}}
<li>{{brewery.title}}</li>
{{/each}}
</ul>
<div class="rr-new-label">
{{#if this.isAddingBrewery}}
<form class="rr-inline-form" {{on "submit" this.saveBrewery}}>
<Input
@type="text"
@value={{this.newBreweryName}}
class="rr-input"
placeholder="New brewery"
data-test-rr="new-band-input"
/>
<button
type="submit"
class="rr-action-button"
disabled={{this.isAddButtonDisabled}}>
Add
</button>
<button
class="rr-cancel-icon"
{{on "click" this.cancelAddBrewery}}>
{{fa-icon "times"}}
</button>
</form>
{{else}}
<label {{on "click" this.addBrewery}}>
{{fa-icon "plus"}}
<span class="ml1">Add new brewery</span>
</label>
{{/if}}
</div>
</div>
<div class="rr-main-panel">
{{outlet}}
</div>
